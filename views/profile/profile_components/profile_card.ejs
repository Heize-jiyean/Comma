<!-- profile_card.ejs -->
<style>
    .profile-card {
        background: #fff;
        border-radius: 20px;
        border: 1px solid #D6D7DA;
        padding: 40px;
    }
    
    .profile-image {
        width: 180px;
        height: 180px;
        border-radius: 50%; /* 원형 이미지 */
        margin: auto;
        background-size: cover; /* 이미지가 컨테이너를 꽉 채우도록 */
        overflow: hidden;
        border: 1px solid #D6D7DA;
        display: flex; /* Flexbox 사용 */
        justify-content: center; /* 수평 가운데 정렬 */
    }

    .profile-details {
        margin-top: 24px;
    }

    .profile-details h2 {
        font-weight: 700;
        font-size: 24px;
        color: black;
        margin-bottom: 4px;
    }

    .badge {
        padding: 8px 10px;
        border-radius: 10px;
        font-size: 16px;
        margin-left: 8px;
    }

    .badge-patient {
        float: right;
        background-color: #FFE8E3; /* 환자 배경색 */
        color: #EA5533; /* 환자 텍스트 색 */
        border: 1px solid #EA5533; /* 환자 배지 테두리 색 */
    }

    .badge-counselor {
        float: right;
        background-color: #F5E8FF; /* 상담사 배경색 */
        color: #9933EA; /* 상담사 텍스트 색 */
        border: 1px solid #9933EA; /* 상담사 배지 테두리 색 */
    }

    .profile-details p {
        font-weight: 500;
        font-size: 16px;
        color: black;
        margin-top: 8px;
        margin-bottom: 15px;
    }
    .profile-bio {
        margin-top: 8px;
        font-size: 16px;
    }

    .setting-button {
        display: block;
        width: 100%;
        padding: 10px;
        background-color: white;
        color: black;
        border: 1px solid #D6D7DA;
        border-radius: 16px;
        font-size: 16px;
        font-weight: 700;
        text-align: center;
        cursor: pointer;
        margin-top: 40px;
    }

    .interest-button {
        display: block;
        width: 100%;
        padding: 10px;
        background-color: white;
        color: black;
        border: 1px solid #D6D7DA;
        border-radius: 16px;
        font-size: 16px;
        font-weight: 700;
        text-align: center;
        cursor: pointer;
        margin-top: 40px;
    }

</style>
<div class="profile-card">
    <div class="profile-image">
        <% if (type === 'patient') { %>
            <img src="<%= patientUser.profile_picture %>" alt="Patient Profile Picture">
        <% } else { %>
            <img src="<%= counselorUser.profile_picture %>" alt="Counselor Profile Picture">
        <% } %>
    </div>
    <div class="profile-details">
        <!-- 닉네임 -->
        <h2>
            <% if (type === 'patient') { %>
                <%- patientUser.nickname %>
            <% } else { %>
                <%- counselorUser.nickname %>
            <% } %>
            <!-- 배지 추가 -->
            <div class="badge 
                <% if (type === 'patient') { %>
                    badge-patient
                <% } else { %>
                    badge-counselor
                <% } %>">
                <% if (type === 'patient') { %>
                    환자
                <% } else { %>
                    상담사
                <% } %>
            </div>
        <!-- 아이디 -->
        <p>
            <% if (type === 'patient') { %>
                <%- patientUser.id %>
            <% } else { %>
                <%- counselorUser.id %>
            <% } %>
        </p>
        
    </div>
    <div class="profile-bio"">
        <!-- 바이오 -->
        <p>
            <% if (type === 'patient') { %>
                <%- patientUser.bio %>
            <% } else { %>
                <%- counselorUser.bio %>
            <% } %>
        </p>
    </div>

    <% if (type === 'patient') { %>
        <% if ((user.role === 'patient') && (user.custom_id === patientUser.id)) { %>
            <button class="setting-button" id="settingButton">프로필 수정하기</button>
        <% } else if (user.role === 'counselor') { %>
            <button 
                class="interest-button" 
                id="scrapPatientButton"
                data-scrapped="<%= isCounselorScrapPatient ? 'true' : 'false' %>"
            >
                <% if (isCounselorScrapPatient) { %>
                    관심 환자 해제
                <% } else { %>
                    관심 환자 등록
                <% } %>
            </button>
        <% } %>
    <% } else if (type === 'counselor') { %>
        <% if ((user.role === 'counselor') && (user.custom_id === counselorUser.id)) { %>
            <button class ="setting-button" id="settingButton">프로필 수정하기</button>
        <% } else if (user.role === 'patient') { %>
            <button 
                class="interest-button"
                id="scrapCounselorButton"
                data-scrapped="<%= isPatientScrapCounselor ? 'true' : 'false' %>"
            >
                <% if (isPatientScrapCounselor) { %>
                    관심 상담사 해제
                <% } else { %>
                    관심 상담사 등록
                <% } %>
            </button>
        <% } %>
    <% } %>

</div>

<script>
    document.getElementById('settingButton')?.addEventListener('click', function() {
        window.location.href = `/profile/settings/profileEdit`;
    })
</script>

<% if (type === 'patient' && patientUser) { %>
    <script>
        document.getElementById('scrapPatientButton')?.addEventListener('click', function() {
            const patientUserId = '<%= patientUser.id %>';
            const button = this;
            const isScrapped = button.getAttribute('data-scrapped') === 'true';

            fetch(`/profile/scrap/${patientUserId}`, {
                method: isScrapped ? 'DELETE' : 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    button.textContent = isScrapped ? '관심 환자 등록' : '관심 환자 해제';
                    button.setAttribute('data-scrapped', !isScrapped);
                    alert(isScrapped ? '관심 환자에서 해제되었습니다.' : '관심 환자로 등록되었습니다.');
                } else {
                    alert('실패');
                }
            })
            .catch(error => console.error('Error:', error));
        });
    </script>
    <% } %>
    
<% if (type === 'counselor' && counselorUser) { %>
    <script>
        document.getElementById('scrapCounselorButton')?.addEventListener('click', function() {
            const counselorUserId = '<%= counselorUser.id %>';
            const button = this;
            const isScrapped = button.getAttribute('data-scrapped') === 'true';

            fetch(`/profile/scrap/${counselorUserId}`, {
                method: isScrapped ? 'DELETE' : 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    button.textContent = isScrapped ? '관심 상담사 등록' : '관심 상담사 해제';
                    button.setAttribute('data-scrapped', !isScrapped);
                    alert(isScrapped ? '관심 상담사에서 해제되었습니다.' : '관심 상담사로 등록되었습니다.');
                } else {
                    alert('실패');
                }
            })
            .catch(error => console.error('Error:', error));
        });
    </script>
<% } %>
    